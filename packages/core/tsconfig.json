{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "baseUrl": ".",
        "noEmit": false,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
