{
    "name": "flyonui-vue",
    "version": "1.0.0-alpha.6",
    "author": "Michael Cozzolino",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/michaelcozzolino/flyonui-vue.git"
    },
    "type": "module",
    "files": [
        "dist",
        "src"
    ],
    "main": "./dist/flyonui-vue.umd.cjs",
    "module": "./dist/flyonui-vue.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/flyonui-vue.js",
            "require": "./dist/flyonui-vue.umd.cjs"
        },
        "./*": "./dist/*"
    },
    "scripts": {
        "build": "yarn build:ui && yarn build:types",
        "build:ui": "vite build",
        "build:types": "vue-tsc --declaration --emitDeclarationOnly && tsc-alias -p tsconfig.json",
        "lint": "eslint . --fix",
        "publish": "yarn npm publish --access public",
        "test": "vitest run",
        "test-coverage": "vitest run --coverage",
        "type-check": "vue-tsc --noEmit -p tsconfig.json"
    },
    "peerDependencies": {
        "flyonui": "^1",
        "vue": "^3",
        "vue-router": "^4"
    },
    "dependencies": {
        "@vueuse/components": "^12.3.0",
        "@vueuse/core": "^12.3.0",
        "nanoid": "5.0.9"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^3.12.1",
        "@eslint/compat": "^1.2.4",
        "@iconify/vue": "^4.2.0",
        "@types/node": "20.12.12",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitest/coverage-v8": "1.6.0",
        "@vue/test-utils": "2.4.6",
        "@vue/tsconfig": "0.5.1",
        "eslint": "^9.18.0",
        "eslint-plugin-align-import": "^1.0.0",
        "jsdom": "^26.0.0",
        "sass-embedded": "^1.83.0",
        "tsc-alias": "1.8.10",
        "typescript": "5.4.5",
        "vite": "^6.0.7",
        "vitest": "1.6.0",
        "vue": "^3.5.13",
        "vue-router": "^4.5.0",
        "vue-tsc": "2.0.19"
    }
}
